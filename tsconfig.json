{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "nodenext",
    "target": "es2020",
    "lib": ["esnext"],
    "types": ["node"],

    // "sourceMap": true,
    // "declaration": true,
    // "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
